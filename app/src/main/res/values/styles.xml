<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--This theme is used only for Toolbar-->
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CountryDetails">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CountryDetails.HeaderText" parent="CountryDetails">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CountryDetails.ValueText" parent="CountryDetails">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WeatherInfo">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WeatherInfo.HeaderText" parent="WeatherInfo">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WeatherInfo.ValueText" parent="WeatherInfo">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>
